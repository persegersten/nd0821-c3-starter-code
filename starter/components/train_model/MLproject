name: census_income_training
conda_env: environment.yml
entry_points:
  test:
    command: >-
      pytest --maxfail=1 --disable-warnings -q
  main:
    parameters:
      data_path: {type: str, default: "../../data/census_income.csv"}
      model_path: {type: str, default: "../../model"}
      sliced_output_path: {type: str, default: "../../slice_output.txt"}
    command: >-
      pytest --maxfail=1 --disable-warnings -q && \
        python train_model.py --data_path {data_path} --model_path {model_path} --sliced_output_path {sliced_output_path}